    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_mc_black_50_opacity</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
    </style>

    <style name="textH3">
        <item name="android:textSize">@dimen/text_size_H3</item>
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textColor">@color/color_mc_black</item>
    </style>
    <style name="EditText" parent="textH3">
        <item name="android:textColor">@color/color_mc_black</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/padding_top_edit_text</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_edit_text</item>
        <item name="android:paddingEnd">@dimen/padding_end_edit_text</item>
        <item name="android:paddingStart">@dimen/padding_start_edit_text</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="EditText.Next">
        <item name="android:imeOptions">actionNext</item>
    </style>

